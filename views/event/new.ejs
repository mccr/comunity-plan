<div class="row">
  <div class="col-sm-6 col-md-offset-3">
    <form action="/event/new" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Event name</label>
        <input type="text" name="name" class="form-control">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea type="text" name="description" class="form-control"></textarea>
      </div>
      <div class="form-group">
        <label for="place_id">Place</label>
        <input type="text" name="place_id" class="form-control">
      </div>
      <div class="form-group">
        <label for="deadline">Deadline</label>
        <input type="date" name="deadline" class="form-control">
      </div>
      <div class="form-group">
        <label for="goal">Goal</label>
        <input type="number" name="goal" class="form-control">
      </div>
      <div class="form-group">
        <label for="picPath">Upload a photo</label>
        <input type="file" name="photo">
      </div>
      <button type="submit">Create my event!</button>
    </form>
  </div>
</div>
