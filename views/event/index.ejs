  <h1 class="text-header title" id="events"><%= title %> <small>Vote for your favorites!</small></h1>
</div>
<div class="container">
<div class="row">
<% for (i=0; i < events.length; i++) { %>
            <div class="col-md-6 portfolio-item size-events">
                <a class="box" href="/event/show/<%= events[i]._id %>">
                    <img class="img-responsive" src="<%= events[i].picPath %>" alt="">
                </a>
                <h3>
                    <a href="/event/show/<%= events[i]._id %>"><%=events[i].name%></a>
                </h3>
                <p><%=events[i].description%></p>
            </div>
      <% } %>
  </div>
