<h1><%= title %></h1>

<div class="container">
  <div class="row">
    <div class="col-sm-2">

    </div>
    <div class="col-sm-10">
      <h1><%= events.name %></h1>
      <p>
        <%= events.description %>
      </p>
      <p>
        <%= events.goal %>
      </p>
      </blockquote>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-8">
      <img src="/<%= events.picPath %>" alt="placePicture" class="img-thumbnail">
    </div>
    <div class="col-sm-4">
      <progress value="<%= events.totalPledged %>" max="<%= events.goal %>"></progress>
      <h2><%= events.totalPledged %></h2><br>
      <span class="light-text">
            pledged of
            <%= events.goal %></span> goal
      </span><br>
      <strong class="large-strong"><h2><%= events.timeRemaining.days %></h2></strong><br>
      <span class="light-text"><%= events.timeRemaining.unit  %> to finish.</span>
      <button class="vote" name="vote"></button>

      </div>
    </div>
  </div>
  <a class="btn backer-btn" href="/event">View all events</a>


</div>
