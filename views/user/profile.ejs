<div class="main-header container-fluid">
  <div class="intro">
      <div class="container text-center">
          <img class="img-thumbnail" src="<%= user.picPath %>" alt="" width="140">
          <h1 class="name"><%= user.name %></h1>
          <div class="name"><p>@<%= user.username %></p></div>
      </div><!--//container-->
  </div><!--//intro-->

  <div class="contact-info">
      <div class="container text-center">
          <ul class="list-inline">
              <li class="email"><i class="fa fa-envelope"></i><a href="mailto: <%= user.email %>" style="color: white;"><%= user.email %></a></li>
          </ul>
      </div><!--//container-->
  </div><!--//contact-info-->
</div>

<div class="col-lg-12 col-sm-6 container">
    <div id="main-button" class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                <div class="hidden-xs">Created</div>
            </button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                <div class="hidden-xs">Voted</div>
            </button>
        </div>
    </div>
        <div class="container profile-events">
      <div class="tab-content">
        <div class="tab-pane fade in active" id="tab1">
          <% for (i=0; i < events.length; i++) { %>
            <div class="item frontend col-sm-3 col-xs-6  size-profile">
                <div class="item-inner">
                    <figure class="figure">
                      <a href="/event/show/<%= events[i]._id %>">
                          <img class="img-portfolio img-responsive" src="<%= events[i].picPath %>">
                      </a>
                    </figure>
                    <div class="content text-left">
                      <h3><%= events[i].name %></h3>
                    </div><!--//content-->
                </div><!--//item-inner-->
            </div><!--//item-->
          <% } %>
        </div>
        <div class="tab-pane fade in" id="tab2">
          <% if(voting.length !== 0) {%>
            <% for (i=0; i < voting.length; i++) { %>
              <div class="item frontend col-md-3 col-xs-6 size-profile">
                  <div class="item-inner">
                      <figure class="figure">
                        <a href="<%= voting[i].event_id._id %>">
                            <img class="img-portfolio img-responsive" src="<%= voting[i].event_id.picPath %>">
                        </a>
                      </figure>
                      <div class="content text-left">
                        <h3><%= voting[i].event_id.name %></h3>
                      </div><!--//content-->
                  </div><!--//item-inner-->
              </div><!--//item-->
            <% } %>
          <% } %>
        </div>
      </div>
    </div>
</div>
